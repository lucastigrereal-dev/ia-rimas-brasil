{
  "name": "ia-rimas-brasil",
  "version": "2.0.0",
  "type": "module",
  "description": "IA de Rimas Brasileiras - Batalhas de Rap",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:ui\"",
    "dev:ui": "vite",
    "dev:api": "tsx watch src/api/server.ts",
    "build": "vite build",
    "preview": "vite preview --port 3000",
    "deploy": "npm run build && wrangler pages deploy dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "setup-fts": "tsx night-crawler/scripts/setup-fts5.ts",
    "generate": "tsx night-crawler/src/cli.ts",
    "test:generator": "vitest run --config night-crawler/vitest.config.ts",
    "test:generator:watch": "vitest --config night-crawler/vitest.config.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@hono/zod-validator": "^0.7.6",
    "framer-motion": "^11.15.0",
    "hono": "^4.0.0",
    "lucide-react": "^0.468.0",
    "openai": "^6.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240620.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "better-sqlite3": "^12.5.0",
    "cheerio": "^1.1.2",
    "concurrently": "^9.1.2",
    "dotenv": "^17.2.3",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.16",
    "wrangler": "^3.78.0"
  }
}
